{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build remote",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e remote -t ${input:target_address} ",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Build local",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e local",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Run tests",
            "type": "shell",
            "command": "./.vscode/tests.sh -t \"${input:target_address}\" -h \"${input:test_client_address}\" -s \"${input:tests}\"  ",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Setup glowroot local",
            "type": "shell",
            "command": "./.vscode/glowroot.sh",
            "problemMatcher": []
        }
        },{
            "label": "Setup glowroot local",
            "type": "shell",
            "command": "./.vscode/glowroot.sh",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "target_address",
            "type":"promptString",
            "description": "IP Address of NGFW",
            "default": ""
        },
        {
            "id": "test_client_address",
            "type":"promptString",
            "description": "IP Address of test client",
            "default": ""
        },
        {
            "id": "tests",
            "type":"promptString",
            "description": "Tests to run (comma separated suites optionally separated by space and followed by comma separated tests",
            "default": "uvm test_010_client_is_online"
        },
    ]
}