#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

%:
	dh $@ 

override_dh_gencontrol:
	if [ -f debian/version ] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi

override_dh_clean:
	rm -f *-stamp
	dh_clean
	rake clean

override_dh_build-arch:
	rake builduvmcore
	touch build-arch-stamp

override_dh_build-indep:
	rake build
	touch build-arch-indep

override_dh_install-arch:
	@dh_testdir
	@dh_testroot
	@dh_installdirs -a
	rake installuvmcore

override_dh_install-indep:
	@dh_testdir
	@dh_testroot
	@dh_installdirs -i
	rake install
	find debian/untangle-libuvm/usr/share/untangle -type f -print0 | xargs -0 chmod 644

override_dh_systemd_enable:
	dh_systemd_enable --no-enable --name=untangle-pyconnector

override_dh_systemd_start:
	dh_systemd_start --no-start --name=untangle-pyconnector
