<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- $Id$ -->

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="true">

  <display-name>Quarantine Web App</display-name>

  <servlet>
    <servlet-name>QuarantineMain</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.QuarantineEnduserServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>InboxMaintenenceServlet</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.InboxMaintenenceServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RequestServlet</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.RequestServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>EmailServlet</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.EmailServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>JSONRPCServlet</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.UtJsonRpcServlet</servlet-class>
    <init-param>
      <param-name>gzip_threshold</param-name>
      <param-value>200</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>I18NServlet</servlet-name>
    <servlet-class>com.untangle.app.smtp.web.euv.I18NServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InboxMaintenenceServlet</servlet-name>
    <url-pattern>/manageuser</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RequestServlet</servlet-name>
    <url-pattern>/request</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>JSONRPCServlet</servlet-name>
    <url-pattern>/JSON-RPC</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>I18NServlet</servlet-name>
    <url-pattern>/i18n</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>request</welcome-file>
  </welcome-file-list>

</web-app>
