#! /bin/bash

# 
# This script starts a tunnel VPN
#

tunnel_id=${1}
conf_dir=${2}
tunnel_name="tunnel-${tunnel_id}"

mkdir -p /run/openvpn

echo "Launching openvpn..."
/usr/sbin/openvpn --writepid /run/openvpn/${tunnel_name}.pid --daemon ovpn-${tunnel_name} --status /run/openvpn/${tunnel_name}.status 10 --cd ${conf_dir} --config ${conf_dir}/tunnel.conf --log-append /var/log/uvm/tunnel.log </dev/null &

