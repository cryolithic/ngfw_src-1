#!/bin/bash

#
# This is a simple helper script because I got tired of launching psql and querying to see what the current active queries were
#

/usr/bin/psql -U postgres uvm -c"SELECT datname as db,usename as user,pid,wait_event as wait,round(extract('epoch' from (now() - query_start))) as sec,query FROM pg_stat_activity WHERE query not like '%pg_stat_activity%'"
